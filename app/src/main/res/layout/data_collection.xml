<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">


    <Button
            android:text="Mud"
            android:layout_width="123dp"
            android:layout_height="130dp"
            android:id="@+id/btn_mud"
            android:background="#FFFFFF"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/btn_sand"
            android:layout_marginStart="40dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.403"
    />

    <Button
            android:text="Sand"
            android:layout_width="123dp"
            android:layout_height="130dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="68dp" android:id="@+id/btn_sand"
            android:background="#FFFFFF"
            android:layout_marginStart="104dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="File Name"
            android:layout_width="122dp"
            android:layout_height="58dp"
            android:id="@+id/textView20"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="176dp" android:gravity="center"
            android:background="@drawable/border"
            app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextView" android:layout_marginTop="104dp"/>
    <TextView
            android:text="Layer Count"
            android:layout_width="121dp"
            android:layout_height="58dp"
            android:id="@+id/textView21"
            android:gravity="center" android:background="@drawable/border"
            android:layout_marginEnd="84dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView20" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.411"
            app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextView" android:layout_marginTop="100dp"/>
    <Button
            android:text="Save"
            android:layout_width="137dp"
            android:layout_height="116dp"
            android:id="@+id/button11"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="176dp"
            android:layout_marginTop="140dp" app:layout_constraintTop_toBottomOf="@+id/textView20"
    />
    <Button
            android:text="END OF RUN"
            android:layout_width="137dp"
            android:layout_height="116dp"
            android:id="@+id/button12"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="52dp"
            android:layout_marginTop="148dp" app:layout_constraintTop_toBottomOf="@+id/textView21"
            app:layout_constraintStart_toEndOf="@+id/button11" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.307"/>
    <EditText
            android:layout_width="285dp"
            android:layout_height="74dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText2"
            android:hint="@string/thickness_input" android:layout_marginTop="244dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="44dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.431"
            android:background="@drawable/border"/>
    <AutoCompleteTextView
            android:layout_width="285dp"
            android:layout_height="66dp"
            android:id="@+id/autoCompleteTextView" android:hint="Note"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="52dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.414" android:background="@drawable/border"
            app:layout_constraintTop_toBottomOf="@+id/editText2" android:layout_marginTop="96dp"/>
</android.support.constraint.ConstraintLayout>