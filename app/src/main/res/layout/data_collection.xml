<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">


    <Button
            android:text="Mud"
            android:layout_width="198dp"
            android:layout_height="275dp"
            android:id="@+id/btn_mud"
            android:background="#FFFFFF"
            android:layout_marginTop="68dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/btn_sand"
            android:layout_marginStart="40dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.403"
    />

    <Button
            android:text="Sand"
            android:layout_width="193dp"
            android:layout_height="275dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="68dp" android:id="@+id/btn_sand"
            android:background="#FFFFFF"
            android:layout_marginStart="72dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="File Name"
            android:layout_width="199dp"
            android:layout_height="84dp"
            android:id="@+id/textView20"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="72dp" android:gravity="center"
            android:background="@drawable/border"
            app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextView" android:layout_marginTop="32dp"
            android:textSize="24dp" app:layout_constraintHorizontal_bias="0.027"
            app:layout_constraintEnd_toStartOf="@+id/textView21"/>
    <TextView
            android:text="Layer Count"
            android:layout_width="210dp"
            android:layout_height="84dp"
            android:id="@+id/textView21"
            android:gravity="center" android:background="@drawable/border"
            app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextView" android:layout_marginTop="32dp"
            android:textSize="24dp" android:layout_marginEnd="64dp" app:layout_constraintEnd_toEndOf="parent"
    />
    <Button
            android:text="Save"
            android:layout_width="137dp"
            android:layout_height="116dp"
            android:id="@+id/button11"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView20"
    />
    <Button
            android:text="END OF RUN"
            android:layout_width="137dp"
            android:layout_height="116dp"
            android:id="@+id/button12"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="52dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView21"
            app:layout_constraintStart_toEndOf="@+id/button11" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.574"/>
    <EditText
            android:layout_width="463dp"
            android:layout_height="86dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText2"
            android:hint="@string/thickness_input" android:layout_marginTop="372dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="44dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.363"
            android:background="@drawable/border" android:textSize="24dp"/>
    <AutoCompleteTextView
            android:layout_width="463dp"
            android:layout_height="86dp"
            android:id="@+id/autoCompleteTextView" android:hint="Note"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="52dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.277" android:background="@drawable/border"
            app:layout_constraintTop_toBottomOf="@+id/editText2" android:layout_marginTop="56dp"
            android:textSize="24dp"/>
</android.support.constraint.ConstraintLayout>